@{ 
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row d-flex justify-content-center align-middle m-5">
    <div class="col-md-6">
        <div class="card ">
            <div class="card-header text-center">
                <h4>User Login</h4>
            </div>
            <form asp-action="UserLogin" asp-controller="Accounts" method="post" class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    @if (ViewBag.userId!=null)
                    {
                    <input required name="userId" type="text" class="form-control userIdInput" placeholder="@ViewBag.userId" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    }
                    else
                    {
                    <input required name="userId" type="text" class="form-control userIdInput" placeholder="Input user Id" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    }
                    
                    <div class="input-group-append">
                        <span class="input-group-text p-0" id="basic-addon2"><button type="submit" class="btn btn-sm btn-info pl-3 pr-3">Go</button></span>
                    </div>
                </div>
                @if (ViewBag.msg!=null)
                {
                    <div class="row" id="msg">
                        <div class="col-md-12 text-md-center">
                            <span class="text-danger">@ViewBag.msg</span>
                        </div>
                    </div>
                }
                @*<div class="form-group ">
                    <div class="row">
                        <div class="col-md-6">
                            <span class="text-danger"><a asp-action="resetPassword" asp-controller="Accounts">Forgot password?</a></span>
                        </div>
                        <div class="col-md-6 text-right">
                            <span class="text-right"><a asp-action="register" asp-controller="Accounts">Register</a> for a new user</span>

                        </div>

                    </div>
                </div>*@
            </form>
        </div>
    </div>
</div>

@section Scripts
{
<script>
    $(document).ready(function () {
        $('.userIdInput').on('keyup', function () {
            $(this).attr('placeholder', 'Input User Id');
            $('#msg').css('display', 'none');

        });
    });
</script>
}