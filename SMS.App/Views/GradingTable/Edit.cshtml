@model GradingTable
@{
    ViewBag.Title = "Update Grading List";
    GlobalUI.PageTitle = ViewBag.title;
}
<div class="row">
    <div class="col-md-6">
        <fieldset class="border border-info p-2">
            <legend class="w-auto text-primary">Grading Information</legend>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label class="col-form-label col-sm-4 col-md-3" asp-for="NumberRangeMin"></label>
                    <div class="col-md-3 ">
                        <input asp-for="NumberRangeMin" class="form-control" placeholder="0-100" />
                        <span asp-validation-for="NumberRangeMin" class="text-danger"></span>
                    </div>
                    @*</div>
                        <div class="form-group row">*@
                    <label class="col-form-label col-sm-4 col-md-3 text-md-right" asp-for="NumberRangeMax"></label>
                    <div class="col-md-3">
                        <input asp-for="NumberRangeMax" class="form-control" placeholder="0-100" />
                        <span asp-validation-for="NumberRangeMax" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-sm-4 col-md-3" asp-for="LetterGrade"></label>
                    <div class=" col-md-3">
                        <input asp-for="LetterGrade" class="form-control" placeholder="A+/A/...." />
                        <span asp-validation-for="LetterGrade" class="text-danger"></span>
                    </div>
                    @*</div>
                        <div class="form-group row">*@
                    <label class="col-form-label col-sm-4 col-md-3 text-md-right" asp-for="GradePoint"></label>
                    <div class=" col-md-3">
                        <input asp-for="GradePoint" class="form-control" placeholder="5.00/4.00..." />
                        <span asp-validation-for="GradePoint" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12 text-right">
                        <partial name="_Edit_Back" model="@Model.Id" />
                    </div>
                </div>
            </form>
        </fieldset>

    </div>
</div>


@section Scripts{

    <script src="~/js/AlertifyNotify/AlertifyNofify.js"></script>
    <script>
    $(function () {
        let saved = '@TempData["created"]';
        let deleted = '@TempData["deleted"]';
        let edited = '@TempData["updated"]';
        let failed = '@TempData["failed"]';


        if (failed != "") {
            alertify.error(failed);
        }
    });
    </script>

}