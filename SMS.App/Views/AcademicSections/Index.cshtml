@model IEnumerable<SMS.Entities.AcademicSection>

@{
    ViewData["Title"] = "Sections";
    GlobalUI.PageTitle = "Section List";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicSession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                <a class="btn-sm btn-info rounded-pill" asp-action="Create"><i class="fa fa-plus"></i> Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicClass.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicSession.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                <partial name="_Edit_Details_Delete" model="@item.Id" />
            </td>
        </tr>
}
    </tbody>
</table>
