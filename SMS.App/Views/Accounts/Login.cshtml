<form asp-action="login" asp-controller="accounts" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="col-md-12 pb-2">
        <h4 class="text-center text-light">Login</h4>
    </div>
    <div class="col-md-12">
        <div class="form-group row">
            <input asp-for="AppUser" placeholder="Email/Username" class="form-control">
        </div>
        <div class="form-group row">
            <input asp-for="Password" placeholder="Password" class="form-control">
        </div>
        <div class="form-group row">
            <div class="col-md-10 col-sm-12 text-left form-inline">
                <input asp-for="RememberMe" > <label for="RememberMe" class="text-light"> Remember</label>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Sign in" class="btn btn-block btn-success">
        </div>
    </div>

    <div class="col-md-12 col-sm-12">
        <a asp-action="forgotPassword" asp-controller="Accounts" class="text-light">Forget Password? <span class="text-warning">Reset!</span></a>
    </div>







