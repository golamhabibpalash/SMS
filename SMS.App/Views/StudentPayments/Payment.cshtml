    <div class="modal-dialog modal-dialog-centered modal-lg pb-0" role="document">
        <div class="modal-content p-3" style="width:24cm">

            <div class="row" style="height:11.5cm;width:23cm">
                <iframe id="myIframe" style="width: 100%; height: 100%;"></iframe>
            </div>
            <div class="row" id="exportOptions" style="display:none">
