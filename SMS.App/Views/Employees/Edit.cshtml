@model SMS.App.ViewModels.Employees.EmployeeEditVM

@{
    ViewData["Title"] = "Edit";
    GlobalUI.PageTitle = ViewBag.Title + " Employee(" + Model.EmployeeName+")";
}


<div class="row">
    <div class="col-md-12 shadow p-3">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="EmployeeName" class="control-label col-form-label col-md-4 text-md-right"></label>
                        <div class="col-md-8">
                            <input asp-for="EmployeeName" class="form-control form-control-sm rounded" />
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Phone" class="control-label col-form-label col-md-4 text-md-right"></label>
                        <div class="col-md-8">
                            <input asp-for="Phone" class="form-control form-control-sm rounded" placeholder="Ex: 01725252525" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="control-label col-form-label col-md-4 text-md-right"></label>
                        <div class="col-md-8">
                            <input asp-for="Email" class="form-control form-control-sm rounded" placeholder="Enter a valid email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-8">
                        <div class="form-group row">
                            <label asp-for="Image" class="control-label col-md-6 text-md-right"></label>
                            <div class="col-md-6">
                                <input asp-for="Image" type="file" class="rounded" id="empImage" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="GenderId" class="control-label col-form-label col-md-6 text-md-right"></label>
                            <div class="col-md-6">
                                <select asp-for="GenderId" class="form-control form-control-sm rounded" asp-items="Model.GenderList">
                                    <option selected disabled>Select Gender</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ReligionId" class="control-label col-form-label col-md-6 text-md-right"></label>
                            <div class="col-md-6">
                                <select asp-for="ReligionId" class="form-control form-control-sm rounded" asp-items="Model.ReligionList">
                                    <option selected disabled>Select Religion</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center h-100" style=" background: #e6e9ea">
                        <span id="empImageHolder" class="align-middle">
                            <img class="shadow align-middle" id="blah" src="~/Images/Employee/photo/@Model.Image" alt="your image" style="width:100px; height:120px;" />
                        </span>
                    </div>
                </div>
            </div>


            <div class="form-group row">
            </div>
            <div class="form-group row">
                <label asp-for="DOB" class="col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="DOB" class="form-control form-control-sm rounded" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>

                <label asp-for="JoiningDate" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="JoiningDate" class="form-control form-control-sm rounded" />
                    <span asp-validation-for="JoiningDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="BloodGroupId" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <select asp-for="BloodGroupId" class="form-control form-control-sm rounded" asp-items="Model.BloodGroupList">
                        <option selected disabled>Select Blood Group</option>
                    </select>
                    <span asp-validation-for="BloodGroupId" class="text-danger"></span>
                </div>

                <label asp-for="NationalityId" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <select asp-for="NationalityId" class="form-control form-control-sm rounded" asp-items="Model.NationalityList">
                        <option selected disabled>Select Nationality</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NIDNo" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="NIDNo" class="form-control form-control-sm rounded" placeholder="Ex:123456789" />
                    <span asp-validation-for="NIDNo" class="text-danger"></span>
                </div>


                <label asp-for="NIDCard" class="control-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="NIDCard" type="file" class="rounded" />
                    <span asp-validation-for="NIDCard" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Nominee" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="Nominee" class="form-control form-control-sm rounded" />
                    <span asp-validation-for="Nominee" class="text-danger"></span>
                </div>

                <label asp-for="NomineePhone" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <input asp-for="NomineePhone" class="form-control form-control-sm rounded" placeholder="Ex: 01700000000" />
                    <span asp-validation-for="NomineePhone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="EmpTypeId" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <select asp-for="EmpTypeId" class="form-control form-control-sm rounded" asp-items="Model.EmpTypeList">
                        <option selected disabled>Select Type of Employee</option>
                    </select>
                </div>

                <label asp-for="DesignationId" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-4">
                    <select asp-for="DesignationId" class="form-control form-control-sm rounded" asp-items="Model.DesignationList">
                        <option selected disabled>Select Designation</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="PresentAddress" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-10">
                    <input asp-for="PresentAddress" class="form-control form-control-sm rounded" placeholder="Area / Village / Road" />
                    <span asp-validation-for="PresentAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-2 col-md-10">
                    <div class="row">
                        <div class="col-md-4">
                            <select asp-for="PresentDivisionId" class="form-control form-control-sm rounded" asp-items="Model.DivisionList">
                                <option selected disabled>Select Division</option>
                            </select>
                            <span asp-validation-for="PresentDivisionId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <select asp-for="PresentDistrictId" class="form-control form-control-sm rounded" asp-items="ViewBag.PresentDistrictId">
                                <option selected disabled>Select District</option>
                            </select>
                            <span asp-validation-for="PresentDistrictId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <select asp-for="PresentUpazilaId" class="form-control form-control-sm rounded" asp-items="ViewBag.PresentUpazilaId">
                                <option selected disabled>Select Upazila</option>
                            </select>
                            <span asp-validation-for="PresentUpazilaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="offset-md-2">
                    (
                    <label class="d-inline-block" for="sameAsPresentAddress">
                        <input class="align-middle" type="checkbox" id="sameAsPresentAddress" />
                        <span class="align-middle">Same as present address</span>
                    </label> )
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PermanentAddress" class="control-label col-form-label col-md-2 text-md-right"></label>
                <div class="col-md-10">
                    <input asp-for="PermanentAddress" class="form-control form-control-sm rounded" placeholder="Vill / Area / Road" />
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-2">
                    <div class="row">
                        <div class="col-md-4">
                            <select asp-for="PermanentDivisionId" class="form-control form-control-sm rounded" asp-items="Model.DivisionList">
                                <option selected disabled>Select Division</option>
                            </select>
                            <span asp-validation-for="PermanentDivisionId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <select asp-for="PermanentDistrictId" class="form-control form-control-sm rounded" asp-items="ViewBag.PermanentDistrictId">
                                <option selected disabled>Select District</option>
                            </select>
                            <span asp-validation-for="PermanentDistrictId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <select asp-for="PermanentUpazilaId" class="form-control form-control-sm rounded" asp-items="ViewBag.PermanentUpazilaId">
                                <option selected disabled>Select Upazila</option>
                            </select>
                            <span asp-validation-for="PermanentUpazilaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group form-check row">
                <label class="form-check-label offset-2 col-form-label">
                    <input class="" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group row">
                <div class="text-center col-md-12">
                    <partial name="_Update_Back" model="@Model.Id" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    $(document).ready(function () {
        //Code for Image instant View
        /*$('#blah').hide();*/
        $("#empImage").change(function () {
            $('#blah').show();
            readURL(this);
        });

        //Code for Designation name Load
        $('#EmpTypeId').change(function () {
            let id = $('#EmpTypeId option:selected').val();

            $.ajax({
                url: "/api/designations/GetByEmpType?id="+id,
                dataType: 'JSON',
                type: 'POST',
                cache: false,
                success: function (data) {
                    $('#DesignationId').empty();
                    var op = '<option disabled selected>Select Designation Name</option>';
                    $('#DesignationId').append(op);
                    $.each(data, function (i, obj) {
                        var ob = '<option value="' + obj.id + '">' + obj.designationName + '</option>';
                        $('#DesignationId').append(ob);
                    });
                },
                error: function (err) {

                }
            });
        });
        //Code for PresentDistrict Load
        $('#PresentDivisionId').change(function () {
            let divId = $('#PresentDivisionId option:selected').val();
            let disName = '#PresentDistrictId';
            GetDistrictByDivisionId(divId, disName);
        });

        //Code for PresentUpazila Load
        $('#PresentDistrictId').change(function () {
            let disId = $('#PresentDistrictId option:selected').val();
            let upName = '#PresentUpazilaId';
            GetUpazilaByDistrictId(disId, upName);
        });

        //Code for PermanentDistrict Load
        $('#PermanentDivisionId').change(function () {
            let divId = $('#PermanentDivisionId option:selected').val();
            let disName = '#PermanentDistrictId';
            GetDistrictByDivisionId(divId, disName);
        });

        //Code for PresentUpazila Load
        $('#PermanentDistrictId').change(function () {
            let disId = $('#PermanentDistrictId option:selected').val();
            let upName = '#PermanentUpazilaId';
            GetUpazilaByDistrictId(disId,upName);
        });

        //Code for Same as Present Address
        $('#sameAsPresentAddress').change(function () {
            if ($(this).prop("checked") == true) {
                let presentAddress = $('#PresentAddress').val();
                $('#PermanentAddress').val(presentAddress);

                var dv = "<option value=" + $("#PresentDivisionId").val() + ">" + $("#PresentDivisionId option:selected").text() + "</option>";
                $("#PermanentDivisionId").html(dv);

                var ds = "<option value=" + $("#PresentDistrictId").val() + ">" + $("#PresentDistrictId option:selected").text() + "</option>";
                $("#PermanentDistrictId").html(ds);

                var up = "<option value=" + $("#PresentUpazilaId").val() + ">" + $("#PresentUpazilaId option:selected").text() + "</option>";
                $("#PermanentUpazilaId").html(up);
            }
            else if ($(this).prop("checked") == false) {
                $('#PermanentAddress').val("");

                let divName = '#PermanentDivisionId';
                GetDivisionList(divName)
                $('#PermanentDistrictId').html('<option disabled selected>Select District Name</option>');
                $('#PermanentUpazilaId').html('<option disabled selected>Select Upazila Name</option>');
            }
        });
    });

    function GetDivisionList(divName) {
        $.ajax({
            url: "/api/divisions/allDivisions",
            dataType: 'JSON',
            type: 'POST',
            cache: false,
            success: function (data) {
                $(divName).empty();
                var op = '<option disabled selected>Select division Name</option>';
                $(divName).append(op);
                $.each(data, function (i, obj) {
                    var ob = '<option value="' + obj.id + '">' + obj.name + '</option>';
                    $(divName).append(ob);
                });
            },
            error: function (err) {

            }
        });
    }
    function GetDistrictByDivisionId(divId,disName) {
        $.ajax({
            url: "/api/districts/bydivision?divId=" + divId,
            dataType: 'JSON',
            type: 'POST',
            cache: false,
            success: function (data) {
                $(disName).empty();
                var op = '<option disabled selected>Select district Name</option>';
                $(disName).append(op);
                $.each(data, function (i, obj) {
                    var ob = '<option value="' + obj.id + '">' + obj.name + '</option>';
                    $(disName).append(ob);
                });
            },
            error: function (err) {

            }
        });
    }
    function GetUpazilaByDistrictId(disId, upName) {
        $.ajax({
            url: "/api/upazilas/byDistrict?id=" + disId,
            dataType: 'JSON',
            type: 'POST',
            cache: false,
            success: function (data) {
                $(upName).empty();
                var option = '<option disabled selected>Select Upazila Name</option>';
                $(upName).append(option);
                $.each(data, function (i, obj) {
                    var ob = '<option value="' + obj.id + '">' + obj.name + '</option>';
                    $(upName).append(ob);
                });
            },
            error: function (err) {

            }
        });
    }
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]); // convert to base64 string
        }
    }
</script>
}
