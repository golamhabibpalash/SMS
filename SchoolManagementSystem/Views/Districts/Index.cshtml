@model IEnumerable<Models.District>

@{
    ViewData["Title"] = "Districts";
    GlobalUI.PageTitle = "All Districts";
    int sl = 0;
}
<div class="p-1">
    <table class="table table-bordered" id="myTable">
        <thead>
            <tr>
                <th width="20">#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Division)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th><a class="btn btn-sm btn-info" asp-action="Create"><i class="fa fa-plus"></i> Add New</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(++sl).</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Division.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <partial name="_Edit_Details_Delete" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>