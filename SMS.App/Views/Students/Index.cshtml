@model IEnumerable<SMS.Entities.Student>

@{
    ViewData["Title"] = "Students";
    GlobalUI.PageTitle = ViewBag.Title;
    string phoneCode = "+880";
    int sl = 0;
}

<div class="row p-1">
    <table class="table table-hover table-bordered" id="myTable" style="table-layout:fixed;">
        <thead class="bg-blue text-light">
            <tr>
                <th width="15">#</th>
                <th width="60" class="no-sort">
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    Name
                </th>
                <th>
                    Class
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassRoll)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.PhoneNo)
                </th>

                <th>
                    Academic Session
                </th>


                <th><a asp-action="Create" class="p-2 btn-sm btn-info rounded-pill"><i class="fa fa-plus"></i> Add <i class="fa fa-user-alt"></i> </a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(++sl).</td>
                    <td class="p-0">
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                            <img src="~/Images/Student/@item.Photo" alt="Photo Not showing" style="width:50px;" />
                        </a>
                    </td>
                    
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.AcademicClass.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassRoll)
                    </td>
                    <td>
                        @phoneCode@item.PhoneNo
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcademicSession.Name)
                    </td>
                    <td>
                        <partial name="_Edit_Details_Delete" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{



    @if (TempData["create"] != null)
    {
        <script src="~/js/AlertifyNotify/successNotify.js"></script>
    }

    @if (TempData["edit"] != null)
    {

        <script src="~/js/AlertifyNotify/warningNotify.js"></script>
    }

    @if (TempData["delete"] != null)
    {

        <script src="~/js/AlertifyNotify/errorNotify.js"></script>
    }
    <script src="~/js/DataTable/dataTable.js"></script>


}