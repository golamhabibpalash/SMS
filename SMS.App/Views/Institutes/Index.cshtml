@model SMS.Entities.Institute

@{
    ViewData["Title"] = "Institute information";
    GlobalUI.PageTitle = ViewBag.Title;
}
<div class="row p-2">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/Images/Institute/@Model.Logo" alt="Institute Logo" style="max-width:200px;" />
            </div>
            <div class="card-footer text-center">
                <span class="h3">@Model.Name</span>
            </div>
        </div>
    </div>
    <div class="col-md-8 well shadow mb-0 pb-0">
        <h4><i class="fas fa-cog"></i> General Informations</h4>
        <table class="table table-striped table-hover mb-0" style="color:#000000">
            <thead class="bg-navy-blue">
                <tr>
                    <td class="" style="width:fit-content">Items</td>
                    <td></td>
                    <td width="80%">Information</td>
                </tr>
            </thead>
            <tbody>

                <tr class="">
                    <td>@Html.DisplayNameFor(model => model.Name)</td>
                    <td>:</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Name)</td>
                </tr>

                <tr>
                    <td>@Html.DisplayNameFor(model => model.ShortName)</td>
                    <td>:</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.ShortName)</td>
                </tr>

                <tr>
                    <td>@Html.DisplayNameFor(model => model.EIIN)</td>
                    <td>:</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.EIIN)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Slogan)</td>
                    <td>:</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Slogan)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Banner)</td>
                    <td>:</td>
                    <td><img src="~/Images/Institute/@Model.Banner" alt="Institute Banner" style="max-height:100px" ; /></td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FavIcon)</td>
                    <td>:</td>
                    <td><img src="~/Images/Institute/@Model.FavIcon" alt="Title Icon" style="max-height:100px" ; /></td>
                </tr>
               

                <tr>
                    <td>@Html.DisplayNameFor(model => model.Address)</td>
                    <td>:</td>
                    <td>@Html.DisplayFor(modelItem => modelItem.Address)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.BranchName)</td>
                    <td>:</td>
                    <td>@Model.BranchName.ToString()</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Phone1)</td>
                    <td>:</td>
                    @if (string.IsNullOrEmpty(Model.Phone1))
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            @Model.Phone1.ToString()
                        </td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Phone2)</td>
                    <td>:</td>
                    @if (string.IsNullOrEmpty(Model.Phone2))
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            @Model.Phone2.ToString()
                        </td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>:</td>
                    @if (string.IsNullOrEmpty(Model.Email))
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>
                            @Model.Email.ToString()
                        </td>
                    }
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.StartingTime)</td>
                    <td>:</td>
                    <td>@Model.StartingTime.ToString("hh:mm:ss tt")</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.ClosingTime)</td>
                    <td>:</td>
                    <td>@Model.ClosingTime.ToString("hh:mm:ss tt")</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.LateTime)</td>
                    <td>:</td>
                    <td>@Model.LateTime.ToString("hh:mm:ss tt")</td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        <div class="col-sm-12 col-md-12 text-md-right text-sm-center">
                            @*<a asp-action="Edit" asp-controller="Institutes" asp-route-id="@Model.Id" class="btn btn-sm btn-success"><i class="fa fa-edit"></i> Edit Info</a>*@
                            <button type="button" class="btn btn-sm btn-navy-blue" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fas fa-edit"></i> Edit</button>
                        </div>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
@*Edit modal*@
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-12 card p-0">
                    <form asp-action="edit" method="post" enctype="multipart/form-data">
                        <div class="card-header bg-navy-blue">
                            <span class="h4 text-light">Update General Information</span>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group row">
                                <label asp-for="Name" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-10">
                                    <input spellcheck="true" asp-for="Name" class="form-control inputClass rounded" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ShortName" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input spellcheck="true" asp-for="ShortName" class="form-control inputClass rounded" />
                                    <span asp-validation-for="ShortName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="EIIN" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="EIIN" class="form-control inputClass rounded" />
                                    <span asp-validation-for="EIIN" class="text-danger"></span>
                                </div>

                                <label asp-for="BranchName" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="BranchName" class="form-control inputClass rounded col-form-label" />
                                    <span asp-validation-for="BranchName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Phone1" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="Phone1" class="form-control inputClass rounded" />
                                    <span asp-validation-for="Phone1" class="text-danger"></span>
                                </div>

                                <label asp-for="Phone2" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="Phone2" class="form-control inputClass rounded col-form-label" />
                                    <span asp-validation-for="Phone2" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="Email" class="form-control inputClass rounded" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <label asp-for="Slogan" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="Slogan" class="form-control inputClass rounded col-form-label" />
                                    <span asp-validation-for="Slogan" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Address" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-10">
                                    <input asp-for="Address" class="form-control inputClass" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="StartingTime" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input type="time" asp-for="StartingTime" class="form-control inputClass rounded" />
                                    <span asp-validation-for="StartingTime" class="text-danger"></span>
                                </div>

                                <label asp-for="ClosingTime" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input type="time" asp-for="ClosingTime" class="form-control inputClass rounded" />
                                    <span asp-validation-for="ClosingTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="LateTime" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input type="time" asp-for="LateTime" class="form-control inputClass rounded" />
                                    <span asp-validation-for="LateTime" class="text-danger"></span>
                                </div>

                                <label asp-for="Banner" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input type="hidden" asp-for="Banner" />
                                    <input type="file" name="banner" class="col-form-label imageClass" id="BannerId" />
                                    <span asp-validation-for="Banner" class="text-danger"></span>

                                    <div id="newBannerDiv" style="display:none">
                                        <img class="img-fluid" id="sBannerId" src="#" alt="Logo" style="height:130px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Logo" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">

                                    <input hidden asp-for="Logo" class="col-form-label" />
                                    <input type="file" name="logo" class="imageClass col-form-label" id="inputGroupFile02" />
                                    @*<input type="file" asp-for="Logo" class="col-form-label inputClass" />*@
                                    <span asp-validation-for="Logo" class="text-danger"></span>

                                    <div id="newLogoDiv" style="display:none">
                                        <img class="img-fluid" id="sLogoId" src="#" alt="Logo" style="height:130px;" />
                                    </div>
                                </div>

                                <label asp-for="FavIcon" class="control-label col-form-label col-md-2 text-md-right"></label>
                                <div class="col-md-4">
                                    <input asp-for="FavIcon" type="hidden" />
                                    <input type="file" accept="ico/png" name="fav_Icon" id="fav_Icon" class="col-form-label inputClass" />
                                    <span asp-validation-for="FavIcon" class="text-danger"></span>

                                    <div id="fav_Icon_Div" style="display:none">
                                        <img class="img-fluid" id="fav_IconId" src="#" alt="Logo" style="height:130px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button id="editButton" class="btn-sm btn-navy-blue" title="Update" data-toggle="tooltip" data-placement="right"><i class="fa fa-edit"></i> Update</button>
                            <button type="button" class="btn-sm btn btn-secondary" data-dismiss="modal"> Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/AlertifyNotify/AlertifyNofify.js"></script>
    <script>
        let deleted = '@TempData["deleted"]';
        let created = '@TempData["created"]';
        let updated = '@TempData["updated"]';
        let failed = '@TempData["error"]';
  
        function readURL(input, idName) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(idName).attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#BannerId").change(function () {
            $("#newBannerDiv").show();
            $("#existingBannerDiv").hide();
            let imgId = "#sBannerId";
            readURL(this, imgId);
        });

        $("#fav_Icon").change(function () {
            $("#fav_Icon_Div").show();
            //$("#existingBannerDiv").hide();
            let imgId = "#fav_IconId";
            readURL(this, imgId);
        });

        $("#inputGroupFile02").change(function () {
            $("#newLogoDiv").show();
            $("#existingLogoDiv").hide();
            let imgId = "#sLogoId";
            readURL(this, imgId);
        });
    </script>
}