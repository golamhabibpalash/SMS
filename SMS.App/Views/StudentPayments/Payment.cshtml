@model SMS.App.ViewModels.StudentPaymentVM
@using System.Collections.Specialized
@inject UserManager<ApplicationUser> _userManager;
@{
    ListDictionary months = new ListDictionary();
    months.Add(1, "January");
    months.Add(2, "February");
    months.Add(3, "March");
    months.Add(4, "April");
    months.Add(5, "May");
    months.Add(6, "Jun");
    months.Add(7, "July");
    months.Add(8, "August");
    months.Add(9, "September");
    months.Add(10, "October");
    months.Add(11, "November");
    months.Add(12, "December");
}
@{
    ViewData["Title"] = "Payment page";
    if (Model.StudentPayment.Student != null)
    {
        GlobalUI.PageTitle = "Payment for " + Model.StudentPayment.Student.Name;
    }
    else
    {
        GlobalUI.PageTitle = "Student Payment";
    }
    int sl = 0;
    int detailSl = 0;
    string studentPhoto = !string.IsNullOrEmpty(Model.StudentPayment.Student.Photo) ? Model.StudentPayment.Student.Photo : "noimage.jpg";
    string createdBy = string.Empty;
    double finalBalance = 0.0;
    int collapsCount = 1;
}

@section Styles{
    <style>
        @@media print
        {
            body
            {
                margin: 0 !important;
                padding: 0 !important;
                height: 100% !important;
                visibility: hidden;
            }

                body.modal-open .modal
                {
                    position: absolute;
                    left: 0;
                    top: 0;
                    margin: 0;
                    padding: 0;
                    overflow: visible !important;
                }

            .modal-dialog
            {
                top: 0;
                max-width: 100%;
                width: 100%;
            }

            .modal-body
            {
                visibility: visible;
                font-size: 20px;
            }
        }

        .multiselect-container > li > a > label
        {
            padding: 4px 20px 3px 20px;
        }


        .mt-100
        {
            margin-top: 100px
        }

        body
        {
            color: #514B64;
            min-height: 100vh
        }

        /*Collaps Panel Code*/



        .panel-heading
        {
            padding: 0;
            border: 0;
        }

        .panel-title > a, .panel-title > a:active
        {
            display: block;
            padding: 15px;
            color: #555;
            font-size: 16px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            word-spacing: 3px;
            text-decoration: none;
        }

        .panel-heading a:before
        {
            font-family: 'Glyphicons Halflings';
            content: "\e114";
            float: right;
            transition: all 0.5s;
        }

        .panel-heading.active a:before
        {
            -webkit-transform: rotate(180deg);
            -moz-transform: rotate(180deg);
            transform: rotate(180deg);
        }
        .panelPointer{
            cursor:pointer;
        }
    </style>
}
<div class="row">
    <div class="col-md-12 text-center">
        <div class="panel p-2 clearfix rounded rounded-2 bg-navy-blue">
            <form id="frmSearchByRollId" asp-action="Payment" asp-controller="StudentPayments" method="get" class="">
                <div class="row">
                    <div class="col-md-4 offset-md-3">
                        <div class="input-group mb-3">
                            @if (ViewBag.roll != null)
                            {
                                <input id="rollInput" class="form-control" name="stRoll" value="@ViewBag.roll" />
                            }
                            else
                            {
                                <input id="rollInput" placeholder="Input Student Roll Number" class="form-control" name="stRoll" />
                            }
                            <div class="input-group-append">
                                <button class="btn btn-info rounded" type="submit"><i class="fas fa-search"></i> Go</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-left">
                        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModal">
                            Select
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row text-white pt-1 pb-1" id="paymentDiv">
        <div class="col-md-6 mh-100 ">
            <div class="panel bg-navy-blue rounded rounded-2" style="min-height:232px;">
                <div class="row p-4">
                    <div class="col-md-4 text-center p-3">
                        <img src="~/Images/Student/@studentPhoto" alt="Alternate Text" class="rounded-circle" style="width:50%;" />
                    </div>

                    <div class="col-md-8">
                        <table class="table text-light">
                            <tr>
                                <td width="140px">Student Name</td>
                                <td>:</td>
                                <td>@Model.StudentPayment.Student.Name</td>
                            </tr>
                            <tr>
                                <td>Academic Class</td>
                                <td>:</td>
                                <td>@Model.StudentPayment.Student.AcademicClass.Name</td>
                            </tr>
                            @if (Model.StudentPayment.Student.AcademicSection != null)
                            {
                                <tr>
                                    <td>Academic Section</td>
                                    <td>:</td>
                                    <td>@Model.StudentPayment.Student.AcademicSection.Name</td>
                                </tr>
                            }
                            <tr>
                                <td>Class Roll</td>
                                <td>:</td>
                                <td>@Model.StudentPayment.Student.ClassRoll</td>
                            </tr>
                            <tr>
                                <td>Academic Session</td>
                                <td>:</td>
                                <td>@Model.StudentPayment.Student.AcademicSession.Name</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mh-100">
            <div class="panel bg-navy-blue rounded rounded-2" style="min-height:232px;">
                <div class="form-horizontal">
                    <form asp-action="payment" asp-controller="StudentPayments" method="post" id="studentPaymentFormId">
                        <input type="hidden" asp-for="StudentPayment.StudentId" value="@Model.StudentId" />
                        <input type="hidden" asp-for="StudentPayment.ReceiptNo"  />
                        <input type="hidden" asp-for="StudentPayment.Id"  />
                        <input type="hidden" asp-for="Id"   />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row pt-2">
                                    <label class="col-md-3 col-form-label text-md-right text-left">Date </label>
                                    <div class="col-md-3">
                                        <input type="date" asp-for="StudentPayment.PaidDate" class="form-control form-control-sm" value="@DateTime.Today.ToString("yyyy-MM-dd")" min="2020-01-31" max="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="StudentPayment.PaidDate" class="text-danger col-form-label"></span>
                                    </div>

                                    <label class="col-md-3 col-form-label text-md-right text-left">Payment For </label>
                                    <div class="col-md-3">
                                        <select class="form-control" asp-items="ViewBag.FeeList" asp-for="StudentPayment.StudentPaymentDetails[0].StudentFeeHeadId">
                                            <option selected disabled>Select Payment</option>
                                        </select>
                                        <span asp-validation-for="ClassFeeHeadId" class="text-danger col-form-label"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-md-right text-left">Amount</label>
                                    <div class="col-md-3">
                                        <input class="form-control form-control-sm text-dark font-weight-bolder text-right" placeholder="Amount" asp-for="StudentPayment.StudentPaymentDetails[0].PaidAmount" />
                                        <input type="hidden" id="academicClassId" value="@Model.StudentPayment.Student.AcademicClassId" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-md-right text-left">Total</label>
                                    <div class="col-md-3">
                                        <input asp-for="StudentPayment.TotalPayment" class="form-control form-control-sm text-right text-dark font-weight-bolder" />
                                    </div>
                                    <span asp-validation-for="StudentPayment.TotalPayment" class="text-danger col-form-label"></span>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-md-right text-left">Remark</label>
                                    <div class="col-md-3">
                                        <input asp-for="StudentPayment.Remarks" class="form-control form-control-sm" />
                                        <span asp-validation-for="StudentPayment.Remarks" class="text-danger col-form-label"></span>
                                    </div>

                                    <label asp-for="IsSMSSend" class="offset-md-3 col-md-3 col-form-label"><input asp-for="IsSMSSend" checked="checked" /> Send SMS Notification</label>
                                    <span asp-validation-for="IsSMSSend" class="text-danger col-form-label"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-8 offset-md-3">
                                        <input type="submit" class="btn-block btn btn-info" value="Submit" id="submitBtn" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-8 offset-md-3 text-center">
                                        <span class="text-warning h6 font-italic">[Please try to input separate payment according to payment type]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="accordion p-3" id="accordionExample">
            <div class="panel panel-info border border-info">
                <div class="panel-heading text-center">
                    <span class="h3">
                        Payment Status and Details
                    </span>
                </div>
                <div class="panel-body">
                    <div class="pl-2 pr-2">
                        <table class="table table-borderless">
                            <thead class="table-info">
                                <tr>
                                    <td style="width:5%">#</td>
                                    <td style="width:35%">Payment Name</td>
                                    <td style="width:10%" class="text-right">Amount</td>
                                    <td style="width:10%" class="text-right">Due/Balance</td>
                                    <td style="width:10%" class="text-right">Status</td>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    @foreach (var item in Model.PaymentItemVMs)
                    {
                        detailSl = 0;
                        <div class="card">
                            <div id="heading_@collapsCount" class="@(item.PaymentItemDetailVMs.Count>0?"card-header panelPointer":"card-header") " data-toggle="collapse" data-target="#collapse_@collapsCount" aria-expanded="true" aria-controls="collapse_@collapsCount">
                                <table class="table table-borderless p-0 m-0">
                                    <thead>
                                        <tr>
                                            <td style="width:5%"></td>
                                            <td style="width:35%"></td>
                                            <td style="width:10%"></td>
                                            <td style="width:10%"></td>
                                            <td style="width:10%"></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class=" ">@collapsCount</td>
                                            <td class="text-left">
                                                @item.ClassFeeListName

                                                @if (item.PaymentItemDetailVMs.Count > 0)
                                                {
                                                    <i class="fas fa-arrow-down"></i>
                                                }
                                            </td>
                                            <td class="text-right"> @item.Amount</td>
                                            @if (item.Balance <= 0)
                                            {
                                                <td class="text-right">@item.Balance</td>
                                            }
                                            else
                                            {
                                                <td class="text-danger text-right">@item.Balance</td>
                                            }
                                            @if (item.Status == "Unpaid")
                                            {
                                                <td class="text-danger text-right">@item.Status <i class="fas fa-thumbs-down"></i></td>
                                            }
                                            else if (item.Status == "Partial")
                                            {
                                                <td class="text-primary text-right">@item.Status <i class="fas fa-thumbs-down"></i></td>
                                            }
                                            else
                                            {
                                                <td class="text-right text-success">@item.Status <i class="fas fa-thumbs-up"></i></td>
                                            }
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            @{
                                finalBalance += item.Balance;
                            }
                            @if (item.PaymentItemDetailVMs.Count > 0)
                            {
                                <div id="collapse_@collapsCount" class="collapse" aria-labelledby="heading_@collapsCount" data-parent="#accordionExample">
                                    <div class="well m-0">
                                        <table class="table table-striped text-center table-bordered">
                                            <thead class="bg-navy-blue">
                                                <tr>
                                                    <td>#</td>
                                                    <td>Receipt No</td>
                                                    <td>Paid date</td>
                                                    <td>Pay mode</td>
                                                    <td>Received by</td>
                                                    <td>Remarks</td>
                                                    <td class="text-right">Amount</td>
                                                    <td>Action</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var payDetail in item.PaymentItemDetailVMs)
                                                {
                                                    ApplicationUser aUser = await _userManager.FindByIdAsync(payDetail.ReceivedBy);
                                                    createdBy = payDetail.ReceivedBy != null ? aUser.UserName : "Not Found";

                                                    <tr>
                                                        @*<td class="" style="transform: rotateX(180deg)">
                                                <i class="fas fa-share fa-2x text-secondary"></i>
                                            </td>*@
                                                        <td>
                                                            @(++detailSl)
                                                        </td>
                                                        <td class="text-center">@payDetail.Receipt</td>
                                                        <td class="text-center">@payDetail.PaidDate</td>
                                                        <td>Cash</td>
                                                        <td>@createdBy</td>
                                                        <td>@payDetail.PaymentRemarks</td>
                                                        <td class="text-right">@payDetail.PaymentAmount</td>
                                                        <td>
                                                            <span class="btn-sm">
                                                                <i class="fas fa-file-pdf text-danger" style="font-size:12px;"></i>
                                                            </span>
                                                            <span class="btn-sm">
                                                                <button class="btn btn-sm editBtn" data-id="@payDetail.PaymentDetailId" data-receiptNo="@payDetail.Receipt" data-paidDate="@payDetail.PaidDate" data-studentFeeHeadId="@payDetail.StudentFeeHeadId" data-totalPayment="@item.Amount" data-remarks="@payDetail.PaymentRemarks" data-paymentId="@item.Id">
                                                                    <i class="fas fa-edit text-secondary" style="font-size:12px;"></i>
                                                                </button>
                                                            </span>
                                                            <span class="btn-sm">
                                                                <i class="fas fa-trash text-danger" style="font-size:12px;"></i>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                        collapsCount++;
                    }
                    <div class="card">

                    </div>
                </div>
                <div class="panel-footer">
                    <table class="table">
                        <thead>
                            <tr>
                                <td style="width:5%"></td>
                                <td style="width:35%"></td>
                                <td style="width:10%"></td>
                                <td style="width:10%"></td>
                                <td style="width:10%"></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-right"></td>
                                <td class="text-right"></td>
                                <td class="text-right h4"> Fianl Balance</td>
                                <td class="text-right h4 @(finalBalance>0?"text-danger":"")">@finalBalance</td>
                                <td></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


}

<!-- Modal -->

