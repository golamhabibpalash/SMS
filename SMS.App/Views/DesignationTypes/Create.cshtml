@model SMS.Entities.DesignationType

@{
    ViewData["Title"] = "Create Designation";
    GlobalUI.PageTitle = "Add New Type of Designation";
}

<div class="row">
    <div class="col-md-8 offset-2 shadow">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="DesignationTypeName" class="control-label col-form-label text-right col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="DesignationTypeName" class="form-control" />
                    <span asp-validation-for="DesignationTypeName" class="text-danger"></span>
                    @if (ViewBag.msg != null)
                    {
                        <p id="msgId" class="alert alert-danger">@ViewBag.msg</p>
                    }
                </div>
            </div>

            <div class="form-group row offset-2">
                <div class="col-md-12 text-center">
                    <partial name="_Create_Back" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
