@model SMS.App.ViewModels.AdministrationVM.LoginVm

@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card col-md-4 pt-4 pb-4">
        <div class="p-3 border-bottom d-flex align-items-center justify-content-center">
            <h5>Login</h5>
        </div>
        <div class="px-md-2 border-bottom">
            <form asp-action="login" asp-controller="accounts" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="AppUser" class="form-control mb-2" placeholder="Email/Username" />
                <span asp-validation-for="AppUser" class="text-danger"></span>
                <input asp-for="Password" class="form-control mb-2" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <label class="mb-2 form-check-inline"> <input asp-for="RememberMe" class="form-control-sm mr-1"> Remember Me</label>
                <button type="submit" class="btn btn-info btn-block continue">Continue</button>
            </form>
        </div>
        <div class="p-3 d-flex flex-row justify-content-center align-items-center member"> <span>Forgot Password? </span> <a asp-action="forgotPassword" asp-controller="Accounts" class="text-decoration-none ml-2">Reset</a> </div>
    </div>
</div>