@model IEnumerable<SMS.App.ViewModels.GradingTable.GradingIndexVM>

@{ 

    int sl = 0;
}
    <div class="row">
        <div class="col-md-6">
            <table class="table">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Grand Interval</td>
                        <td>Letter Grade</td>
                        <td>Grade Point</td>
                        <td>
                            <partial name="_Create" />
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || Model.Count() <= 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                <h2>Data Not Found!</h2>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++sl)</td>
                                <td>@item.NumberRange</td>
                                <td>@item.LetterGrade</td>
                                <td>@item.GradePoint</td>
                                <td>
                                    <partial name="_Edit_Details_Delete" model="@item.Id" />
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>