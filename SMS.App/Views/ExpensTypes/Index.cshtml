@model SMS.App.ViewModels.Accounts.ExpenseTypesVM
<div class="col-md-4">
    <fieldset class="border p-3">
        <legend class="" style="width:inherit" id="legendTitle">Create Expense Type</legend>
        <form asp-action="Create" method="post" id="createForm">
            <div class="form-group row">
                <label asp-for="ExpenseTypeName" class="col-sm-3 col-form-label text-right text-sm-left"></label>
                <div class="col-sm-9">
                    <input asp-for="ExpenseTypeName" class="form-control" placeholder="Off Day Type Name">
                    <span asp-validation-for="ExpenseTypeName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-3 col-form-label text-right text-sm-left"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" placeholder="Description">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 text-right">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
        <form asp-action="Edit" method="post" id="updateForm" style="display:none">
            <div class="form-group row">
                <label asp-for="ExpenseTypeName" class="col-sm-3 col-form-label text-right text-sm-left"></label>
                <div class="col-sm-9">
                    <input asp-for="ExpenseTypeName" class="form-control" placeholder="Off Day Type Name">
                    <span asp-validation-for="ExpenseTypeName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-3 col-form-label text-right text-sm-left"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" placeholder="Description">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 text-right">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </form>
    </fieldset>
</div>

<div class="col-md-8">
    <span>Expense Type List</span>
    <table class="table table-info table-bordered table-responsive table-striped">
        <thead></thead>
        <tbody></tbody>
        <tfoot></tfoot>
    </table>
</div>