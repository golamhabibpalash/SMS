@model SMS.App.ViewModels.AdministrationVM.OTPVM

@{
    ViewBag.Title = "Check OTP";

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row d-flex justify-content-center align-middle m-5">
    <div class="col-md-6">
        <div class="card ">
            <div class="card-header text-center">
                <h4>Input OTP</h4>
            </div>
            <form asp-action="OTPGenerate" asp-controller="Accounts" method="post" class="p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="OTP" class="col-form-label text-md-right col-md-3"></label>
                    <div class="col-md-9 ">
                        <div class="row input-group">
                            <input asp-for="OTP" class="form-control" placeholder="Input OTP Number">
                            <div class="input-group-append">
                                <input class="btn btn-sm input-group-sm btn-info form-control-sm" type="submit" />
                            </div>
                        </div>
                        <div>
                            <span asp-validation-for="OTP" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group row text-md-center">
                    <div class="col-md-12">

                    </div>
                </div>
            </form>
            @if (ViewBag.msg != null)
            {
                <div class="card-footer text-center">
                    <span class="alert text-danger msg">@ViewBag.msg</span>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('.msg').fadeOut(6000);
    });
    </script>
}