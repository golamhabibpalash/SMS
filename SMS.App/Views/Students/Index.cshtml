@using Microsoft.AspNetCore.Identity;
@using System.IO;
@using Microsoft.AspNetCore.Hosting;

@inject UserManager<ApplicationUser> _userManager;
@inject IWebHostEnvironment env;

@model IEnumerable<SMS.Entities.AdditionalModels.StudentListVM>

@{
    ViewData["Title"] = "Students";
    GlobalUI.PageTitle = ViewBag.Title;
    string phoneCode = "+880";
    string totalFound = ViewBag.totalFound == null ? "Nothing Found" : ViewBag.totalFound + " Found";
}
<div class="col-md-12">
    <form asp-action="Index" asp-controller="Students">
        <div class="alert mb-0">
            <div class="form-group row mb-0">
                <label for="aAcademicSessionId" class="col-form-label text-md-right">Academic Session</label>
                <div class="col-md-2">
                    <select asp-items="ViewBag.academicSessionId" class="form-control" id="aAcademicSessionId" name="academicSessionid">
                        <option selected disabled>Select Session</option>
                    </select>
                </div>
                <label for="aAcademicClassId" class="col-form-label text-md-right">Academic Class</label>
                <div class="col-md-2">
                    <select class="form-control" id="aAcademicClassId" name="academicClassId" asp-items="ViewBag.academicClassId">
                        <option selected disabled>Select Class</option>
                    </select>
                </div>
                <label for="aAcademicSectionId" class="col-form-label text-md-right">Academic Section</label>
                <div class="col-md-2">
                    <select class="form-control" id="aAcademicSectionId" name="academicSectionId" asp-items="ViewBag.academicSectionId">
                        <option selected disabled>Select Section</option>
                    </select>
                </div>
                <label for="aStatus" class="col-form-label text-md-right">Status</label>
                <div class="col-md-2">
                    <select class="form-control" id="aStatus" name="aStatus" asp-items="ViewBag.aStatus">
                        <option selected disabled>Select Status</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
                <label class="col-form-label text-primary">@totalFound</label>
            </div>

        </div>
    </form>
</div>
<div class="row p-1">
    <div class="col-md-12">

        <table class="table table-hover table-bordered table-responsive-sm table-striped" id="myTable">
            <thead class="bg-blue text-light">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ClassRoll) </th>
                    <th> @Html.DisplayNameFor(model => model.Photo)</th>
                    <th> Name</th>
                    <th>নাম </th>
                    <th> Class</th>
                    <th> Section </th>
                    <th>  @Html.DisplayNameFor(model => model.PhoneNo)</th>
                    <th>Session </th>
                    <th>Gender </th>
                    <th>Status</th>
                    <th><a asp-action="Create" class="p-2 btn-sm btn-info rounded-pill"><i class="fa fa-plus"></i> Add <i class="fa fa-user-alt"></i> </a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassRoll)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                                @{
                                    var avatar = !string.IsNullOrEmpty(item.Photo) ? "/Images/Student/" + item.Photo : "/Images/noProfileImage.png";
                                }
                                @{
                                    string root = env.WebRootPath;
                                    string folder = "Images/Student/";
                                    if (!string.IsNullOrEmpty(item.Photo))
                                    {
                                        var path = System.IO.Path.Combine(root, folder, item.Photo);

                                        if (!File.Exists(path))
                                        {
                                            avatar = $"/Images/noProfileImage.png";
                                        }
                                    }
                                }

                                <img src=@avatar alt="@item.StudentName" style="max-width:50px; max-height:80px" />

                            </a>
                        </td>

                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                                @item.StudentName.ToUpper()
                            </a>
                        </td>
                        <td> @item.NameBangla</td>
                        <td> @Html.DisplayFor(modelItem => item.ClassName)</td>
                        @if (item.SectionName != null)
                        {
                            <td>@item.SectionName</td>
                        }
                        else
                        {
                            <td>N/A</td>
                        }
                        <td> @phoneCode@item.PhoneNo</td>
                        <td> @Html.DisplayFor(modelItem => item.SessionName)</td>
                        <td>
                            @item.Gender
                        </td>
                        @if (item.Status)
                        {
                            <td> <input type="checkbox" checked disabled /> Active</td>
                        }
                        else
                        {
                            <td><input type="checkbox" disabled /> InActive</td>

                        }
                        <td>
                            <partial name="_Edit_Details_Delete" model="@item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/DataTable/dataTable.js"></script>

    <script src="~/js/DataTable/dataTables.buttons.min.js"></script>
    <script src="~/js/DataTable/jszip.min.js"></script>
    <script src="~/js/DataTable/pdfmake.min.js"></script>
    <script src="~/js/DataTable/vfs_fonts.js"></script>
    <script src="~/js/DataTable/buttons.html5.min.js"></script>

    <script>
        $("#myTable_info").detach().insertAfter('#myTable_length');

        $(document).ready(function () {

            //$('#myTable').DataTable({
            //    dom: 'Bfrtip',
            //    buttons: [
            //        'copy', 'csv', 'excel', 'pdf', 'print'
            //    ]
            //});


        $(function () {
            let saved = '@TempData["saved"]';
            let deleted = '@TempData["deleted"]';
            let edited = '@TempData["edited"]';
            let failed = '@TempData["failed"]'
            if (saved != "") {
                alertify.success("Saved Successfully");
                }
            if (deleted != "") {
                alertify.error("Deleted Successfully");
                }
            if (edited != "") {
                alertify.message('Updated Successfully');
                }
            if (failed != "") {
                alertify.error(failed);
                }
            });
        });
        
        
        $('#aAcademicClassId').change(function () {
            let id = $('#aAcademicClassId option:selected').val();
            let sessionId = $('#aAcademicSessionId option:selected').val();

            $.ajax({
                url: "/api/academicsections/getbyclasswithsessionId?classId=" + id + "&sessionId=" + sessionId,
                dataType: "JSON",
                type: "POST",
                cache: false,
                success: function (data) {
                    $('#aAcademicSectionId').empty();

                    if (data != null || data != '') {
                        var o = '<option disabled selected>Select Section Name</option>';
                        var o2 = '<option value="0">No Section</option>';
                        $('#aAcademicSectionId').append(o);
                        $('#aAcademicSectionId').append(o2);
                        $.each(data, function (i, obj) {
                            console.log(obj.name);
                            var op = '<option value="' + obj.id + '">' + obj.name + '</option>';
                            $('#aAcademicSectionId').append(op);
                        });
                    }
                    else {
                        var o = '<option disabled selected>Section Not Found</option>';
                        $('#aAcademicSectionId').append(o);
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            });
        });
        $('#aAcademicSessionId').change(function () {
            $('#aAcademicSectionId').empty();
            $.ajax({
                url: "/academicClasses/getAll",
                dataType: "JSON",
                type: "POST",
                cache: false,
                success: function (data) {
                    $('#aAcademicClassId').empty();
                    var o = '<option disabled selected>Select Class Name</option>';
                    $('#aAcademicClassId').append(o);
                    $.each(data, function (i, obj) {
                        console.log(obj.name);
                        var op = '<option value="' + obj.id + '">' + obj.name + '</option>';
                        $('#aAcademicClassId').append(op);
                    });
                },
                error: function (err) {
                    console.log(err);
                }
            });
        });
    </script>

}