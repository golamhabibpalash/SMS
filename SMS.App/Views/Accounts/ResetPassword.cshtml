@model SMS.App.ViewModels.AdministrationVM.ResetPasswordVM
@{
    ViewBag.Title = "Reset Password";

    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-md-6 offset-md-2">

    <div class="card">
        <form asp-action="ResetPassword" asp-controller="Accounts" method="post" class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group row">
                <label asp-for="Password" class="col-form-label text-md-right col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-form-label text-md-right col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row text-md-center">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-block">Reset</button>
                </div>
            </div>
        </form>
        @if (ViewBag.msg != null)
        {
            <div class="row msgDiv">
                <div class="col-md-12 text-center">
                    <span class="alert text-danger">@ViewBag.msg</span>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts{ 
<script>
    $(document).ready(function () {
        $('.msgDiv').fadeOut(9000);
    });
</script>
}