@model IEnumerable<SchoolManagementSystem.Models.DesignationType>

@{
    ViewData["Title"] = "Designation Types";
    GlobalUI.PageTitle = "Types of Designation";
    int sl = 0;
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.DesignationTypeName)
            </th>
            <th>
                <a class="p-2 btn-sm btn-info rounded-pill" asp-action="Create"><i class="fa fa-plus"></i> Add</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(++sl).</td>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationTypeName)
            </td>

            <td>
                <partial name="_Edit_Details_Delete" model="@item.Id" />
            </td>
        </tr>
}
    </tbody>
</table>
