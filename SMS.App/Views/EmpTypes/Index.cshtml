@model IEnumerable<SMS.Entities.EmpType>

@{
    ViewData["Title"] = "Employee Type";
    GlobalUI.PageTitle = ViewBag.Title;
    int sl = 0;
}


    <table class="table">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    <a class="rounded-pill btn-sm btn-info" asp-action="Create"><i class="fa fa-plus"></i> Add New</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(++sl).
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <partial name="_Edit_Details_Delete" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>



