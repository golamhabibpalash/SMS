@model SMS.App.ViewModels.AdministrationVM.LoginVm

@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<form asp-action="login" asp-controller="accounts" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <input type="hidden" asp-for="ReturnUrl" value="@TempData["ReturnUrl"]" />
    <div class="col-md-12 pb-2">
        <h4 class="text-center text-light">Login</h4>
    </div>
    <div class="col-md-12">
        <div class="form-group row">
            <input asp-for="AppUser" placeholder="Email/Username" class="form-control">
        </div>
        <div class="form-group row">
            <input asp-for="Password" placeholder="Password" class="form-control">
        </div>
        <div class="form-group row">
            <div class="col-md-10 col-sm-12 text-left form-inline pl-0">
                <input asp-for="RememberMe" > <label for="RememberMe" class="text-light pl-1"> Remember</label>
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Sign in" class="btn btn-block btn-success" id="signinBtn">

            <button id="loadingId" class="btn btn-light btn-block" type="button" disabled style="display:none">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                Loading...
            </button>
        </div>
    </div>

    <div class="col-md-12 col-sm-12">
        <a asp-action="forgotPassword" asp-controller="Accounts" class="text-light">Forget Password? <span class="text-warning">Reset!</span></a>
    </div>
</form>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('#signinBtn').click(function () {
                $(this).css("display", "none");
                $("#loadingId").css("display","block");
            });
        });
    </script>
}