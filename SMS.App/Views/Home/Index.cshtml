@model SMS.App.ViewModels.Students.StudentDashboardVM
@{
    ViewData["Title"] = "Home Page";
    GlobalUI.PageTitle = "";

    int totalStudent = 0;
    int totalTeacher = 0;
    int totalEmployee = 0;
    if (ViewBag.totalStudent!=null)
    {
        totalStudent = ViewBag.totalStudent;
    }
    if (ViewBag.totalTeacher!=null)
