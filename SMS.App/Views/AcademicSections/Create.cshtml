@model SMS.Entities.AcademicSection

@{
    ViewData["Title"] = "Create";
    GlobalUI.PageTitle = "Create new Section";
}

<div class="row">
    <div class="col-md-6 offset-3 shadow p-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-form-label col-md-2 text-md-right text-sm-left"></label>
                <div class="col-md-10">
                    <input asp-for="Name" class="form-control rounded" placeholder="Ex: Section A" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="AcademicSessionId" class="col-form-label col-md-2 text-md-right text-sm-left ">Session</label>
                <div class="col-md-4">
                    <select asp-for="AcademicSessionId" class="form-control rounded" asp-items="ViewBag.AcademicSessionId">
                        <option disabled selected>Select Session</option>
                    </select>
                    <span asp-validation-for="AcademicSessionId" class="text-danger"></span>
                </div>

                <label asp-for="AcademicClassId" class="col-form-label col-md-2 text-md-right text-sm-left "></label>
                <div class="col-md-4">
                    <select asp-for="AcademicClassId" class="form-control rounded" asp-items="ViewBag.AcademicClassId">
                        <option>Select Session First</option>
                    </select>
                    <span asp-validation-for="AcademicClassId" class="text-danger"></span>
                </div>
            </div>

            <div class="checkbox offset-2">
                <label><input class="" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)</label>
            </div>
            <div class="form-group row">
                <div class="col-md-12 text-center">
                    <partial name="_Create_Back" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        <script src="~/js/AlertifyNotify/AlertifyNofify.js"></script>
    }
