            $('#aAcademicClassId').change(function () {
                let id = $('#aAcademicClassId option:selected').val();
                let sessionId = $('#aAcademicSessionId option:selected').val();

                $.ajax({
                    url: "/api/academicsections/getbyclasswithsessionId?classId=" + id + "&sessionId=" + sessionId,
                    dataType: "JSON",
                    type: "POST",
                    cache: false,
                    success: function (data) {
                        $('#aAcademicSectionId').empty();

                        if (data != null || data != '') {
                            var o = '<option disabled selected>Select Section Name</option>';
                            var o2 = '<option value="0">No Section</option>';
                            $('#aAcademicSectionId').append(o);
                            $('#aAcademicSectionId').append(o2);
                            $.each(data, function (i, obj) {
                                console.log(obj.name);
                                var op = '<option value="' + obj.id + '">' + obj.name + '</option>';
                                $('#aAcademicSectionId').append(op);
                            });
                        }
                        else {
                            var o = '<option disabled selected>Section Not Found</option>';
                            $('#aAcademicSectionId').append(o);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });
            $('#aAcademicSessionId').change(function () {
                $('#aAcademicSectionId').empty();
                $.ajax({
                    url: "/academicClasses/getAll",
                    dataType: "JSON",
                    type: "POST",
                    cache: false,
                    success: function (data) {
                        $('#aAcademicClassId').empty();
                        var o = '<option disabled selected>Select Class Name</option>';
                        $('#aAcademicClassId').append(o);
                        $.each(data, function (i, obj) {
                            console.log(obj.name);
                            var op = '<option value="' + obj.id + '">' + obj.name + '</option>';
                            $('#aAcademicClassId').append(op);
                        });
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            });

        });


</script>

