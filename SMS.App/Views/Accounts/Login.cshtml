@model SMS.App.ViewModels.AdministrationVM.LoginVm

@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    string placeholderText = "";
    if (ViewBag.userType != null)
    {
        if (ViewBag.userType == 's')
        {
            placeholderText = "Input your roll here";
        }
        else if (ViewBag.userType == 'e')
        {
            placeholderText = "Input your email here";
        }
    }
}

<div class="row d-flex justify-content-center align-middle m-5">
    <div class="col-md-6">
        <div class="card ">
            <div class="card-header text-center">
                <h4>Login</h4>
            </div>
            <form asp-action="Login" asp-controller="Accounts" method="post" class="p-3">
                <input type="hidden" asp-for="UserType"  value="@ViewBag.userType" />
                <div class="form-group row">
                    <label asp-for="AppUser" class="col-form-label text-md-right col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="AppUser" class="form-control" aria-describedby="emailHelp" placeholder="@placeholderText">
                        <span asp-validation-for="AppUser" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-form-label text-md-right col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    
                    <div class="offset-md-3">
                        <input asp-for="RememberMe" class="">
                    </div><label asp-for="RememberMe" class="form-check-label col-md-3 text-md-right"></label>
                </div>
                <div class="form-group row text-md-center">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                        
                    </div>
                </div>
                <div class="form-group ">
                    <div class="row">
                        <div class="col-md-6">
                            <span class="text-danger"><a asp-action="resetPassword" asp-controller="Accounts">Forgot password?</a></span>
                        </div>
                        <div class="col-md-6 text-right">
                            <span class="text-right"><a asp-action="register" asp-controller="Accounts">Register</a> for a new user</span>

                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="jumbotron">
    <a asp-action="Register" asp-controller="Accounts" asp-route-userType="s">Student Portal</a>
    <a asp-action="Register" asp-controller="Accounts" asp-route-userType="e">Employee Portal</a>
</div>