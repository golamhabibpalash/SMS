@model SMS.App.ViewModels.AdministrationVM.UserProfileVM
<div class="row">
    <div class="row pt-3 pb-2" style="background-color: #2A3F54;">
        <div class="col-md-12 text-center">
            <form id="frmSearchByUserId" asp-action="UserProfile" asp-controller="Administrations" method="get" class="">
                <div class="row">
                    <div class="col-md-4 text-md-left">
                        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#employeeSearchModal">
                            Select User
                        </button>
                        @if (ViewBag.UserName != null)
                        {
                            <span>@ViewBag.UserName</span>
                        }
                    </div>
                    <div class="col-md-4 offset-md-3" style="visibility:hidden">
                        <div class="input-group mb-3">
                            @if (ViewBag.UserName != null)
                            {
                                <input id="UserIdInput" class="form-control" name="userId" value="@ViewBag.UserName" />
                            }
                            else
                            {
                                <input id="UserIdInput" placeholder="Input User Id" class="form-control" name="userId" />
                            }
                            <div class="input-group-append">
                                <button class="btn btn-info rounded" type="submit"><i class="fas fa-search"></i> Go</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
@if (Model.Employee != null)
{
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-title">User Information</div>
                <div class="card-header"></div>
                <div class="card-body">
                    <div class="text-md-center">
                        <img src="~/Images/Employee/photo/@Model.Employee.Image" alt="Alternate Text" onerror="this.src='@Url.Content("~/Images/Student/noimage.jpg")'" style="width:40%;" />
                    </div>


                    <div class="row">
                        <div class="col-md-12">
                            <dl class="row p-2">
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    Employee ID :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Html.DisplayFor(model => model.Employee.Id)
                                </dd>
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    Name :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Html.DisplayFor(model => model.Employee.EmployeeName)
                                </dd>
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    নাম (বাংলা) :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Html.DisplayFor(model => model.Employee.EmployeeNameBangla)
                                </dd>
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    Joining Date :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Model.Employee.JoiningDate.ToString("dd MMM yyyy")
                                </dd>
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    Phone No :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Model.Employee.Phone
                                </dd>
                                <dt class="col-sm-4 col-4 text-md-right text-sm-right text-right">
                                    Email Address :
                                </dt>
                                <dd class="col-sm-8 col-8 border-bottom">
                                    @Model.Employee.Email
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="card-title text-center">Roles</div>
                    <div class="card-body">
                        @for (int i = 0; i < Model.UserRoleClaimsVM.ApplicationRoles.Count; i++)
                        {
                            <div>
                                <input type="hidden" asp-for="@Model.UserRoleClaimsVM.ApplicationRoles[i].Value" />
                                <input asp-for="@Model.UserRoleClaimsVM.ApplicationRoles[i].Selected" /> <label asp-for="@Model.UserRoleClaimsVM.ApplicationRoles[i].Selected"> @Model.UserRoleClaimsVM.ApplicationRoles[i].Text</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pagePermission-tab" data-bs-toggle="tab" data-bs-target="#pagePermission" type="button" role="tab" aria-controls="pagePermission" aria-selected="true">Page Permission</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Profile</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="pagePermission" role="tabpanel" aria-labelledby="pagePermission-tab">

                        <div class="row">

                            <div class="col-md-3">
                                <div class="card shadow">
                                    <form asp-action="UserProfile" method="post">
                                        <input type="hidden" asp-for="@Model.UserRoleClaimsVM.ApplicationUser.Id"  />
                                        <div class="card-title text-center">Claims</div>
                                        <div class="card-body">

                                            @for (int i = 0; i < Model.UserRoleClaimsVM.ApplicationClaims.Count; i++)
                                            {
                                                <div>
                                                    <input type="hidden" asp-for="@Model.UserRoleClaimsVM.ApplicationClaims[i].Value" />
                                                    <input asp-for="@Model.UserRoleClaimsVM.ApplicationClaims[i].Selected" />
                                                    <label class="col-form-label" asp-for="@Model.UserRoleClaimsVM.ApplicationClaims[i].Selected">@Model.UserRoleClaimsVM.ApplicationClaims[i].Text</label>
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <input type="submit" value="Update" class="btn btn-info btn-sm" />
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card shadow">
                                    <div class="card-title text-center">Academic</div>
                                    <div class="card-body">
                                        @for (int i = 0; i < 3; i++)
                                        {
                                            <div>
                                                <input id="id_@i" type="checkbox" name="name" value="" />
                                                <label for="id_@i">Page @i Name </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card shadow">
                                    <div class="card-title text-center">Administrations</div>
                                    <div class="card-body"></div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card shadow">
                                    <div class="card-title text-center">Accounts</div>
                                    <div class="card-body"></div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card shadow">
                                    <div class="card-title text-center">Others</div>
                                    <div class="card-body"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
                    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
                </div>
            </div>
        </div>
    </div>

}




<!-- Student Select Modal -->
<div class="modal fade" id="employeeSearchModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-center">
            <div class="modal-header text-center">
                <h4 class="text-center">Select Student</h4>
            </div>
            <div class="modal-body">
                <form action="/" method="post">
                    <div class="form-group row">
                        <label class="col-md-4 text-md-right col-form-label">Select User</label>
                        <div class="col-md-8">
                            <select class="form-control" asp-items="ViewBag.UserList" id="ddUserId">
                                <option selected disabled>-Select User-</option>
                            </select>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#ddUserId').change(function () {
            let cRoll = $('#ddUserId option:selected').val();
            $('#UserIdInput').val(cRoll);
            $('#frmSearchByUserId').submit();
        });
    </script>
}