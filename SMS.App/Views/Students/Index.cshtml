@using Microsoft.AspNetCore.Identity;
@using System.IO;
@using Microsoft.AspNetCore.Hosting;

@inject UserManager<ApplicationUser> _userManager;
@inject IWebHostEnvironment env;

@model IEnumerable<SMS.App.ViewModels.Students.StudentListVM>

@{
    ViewData["Title"] = "Students";
    GlobalUI.PageTitle = ViewBag.Title;
    string phoneCode = "+880";
}
<div class="col-md-12">
    <form asp-action="Index" asp-controller="Students" >
        <div class="alert mb-0">
            <div class="form-group row mb-0">
                <label for="aAcademicSessionId" class="col-form-label text-md-right">Academic Session</label>
                <div class="col-md-2">
                    <select asp-items="ViewBag.academicSessionId" class="form-control" id="aAcademicSessionId" name="academicSessionid">
                        <option selected disabled>Select Session</option>
                    </select>
                </div>
                <label for="aAcademicClassId" class="col-form-label text-md-right">Academic Class</label>
                <div class="col-md-2">
                    <select class="form-control" id="aAcademicClassId" name="academicClassId" asp-items="ViewBag.academicClassId">
                        <option selected disabled>Select Class</option>
                    </select>
                </div>
                <label for="aAcademicSectionId" class="col-form-label text-md-right">Academic Class</label>
                <div class="col-md-2">
                    <select class="form-control" id="aAcademicSectionId" name="academicSectionId" asp-items="ViewBag.academicSectionId">
                        <option selected disabled>Select Section</option>
                    </select>
                </div>
                <label for="aStatus" class="col-form-label text-md-right">Status</label>
                <div class="col-md-2">
                    <select class="form-control" id="aStatus" name="aStatus" asp-items="ViewBag.aStatus" >
                        <option selected disabled>Select Status</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>

        </div>
    </form>
</div>
<div class="row p-1">
    <div class="col-md-12">

        <table class="table table-hover table-bordered table-responsive-sm table-striped" id="myTable">
            <thead class="bg-blue text-light">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ClassRoll) </th>
                    <th> @Html.DisplayNameFor(model => model.Photo)</th>
                    <th> Name</th>
                    <th>নাম </th>
                    <th> Class</th>
                    <th> Section </th>
                    <th>  @Html.DisplayNameFor(model => model.PhoneNo)</th>
                    <th>Academic Session </th>
                    <th>Active Status</th>
                    <th><a asp-action="Create" class="p-2 btn-sm btn-info rounded-pill"><i class="fa fa-plus"></i> Add <i class="fa fa-user-alt"></i> </a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassRoll)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                                @{
                                    var avatar = !string.IsNullOrEmpty(item.Photo) ? "/Images/Student/" + item.Photo : "/Images/noProfileImage.png";
                                }
                                @{
                                    string root = env.WebRootPath;
                                    string folder = "Images/Student/";
                                    if (!string.IsNullOrEmpty(item.Photo))
                                    {
                                        var path = System.IO.Path.Combine(root, folder, item.Photo);

                                        if (!File.Exists(path))
                                        {
                                            avatar = $"/Images/noProfileImage.png";
                                        }
                                    }
                                }                               

                                <img src=@avatar alt="@item.Name" style="max-width:50px; max-height:80px" />

                            </a>
                        </td>

                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Students">
                                @item.Name.ToUpper()
                            </a>
                        </td>
                        <td>
                            @item.NameBangla
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AcademicClass.Name)
                        </td>
                        <td>@item.AcademicSection.Name</td>
                        <td>
                            @phoneCode@item.PhoneNo
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AcademicSession.Name)
                        </td>
                        @if (item.Status)
                        {

                            <td> <input type="checkbox" checked disabled /> Active</td>

                        }
                        else
                        {
                            <td><input type="checkbox" disabled /> InActive</td>

                        }
                        <td>
                            <partial name="_Edit_Details_Delete" model="@item.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/DataTable/dataTable.js"></script>
    <script>
        $(document).ready(function () {

        $(function () {
            let saved = '@TempData["saved"]';
            let deleted = '@TempData["deleted"]';
            let edited = '@TempData["edited"]';
            let failed = '@TempData["failed"]'
            if (saved != "") {
                alertify.success("Saved Successfully");
                }
            if (deleted != "") {
                alertify.error("Deleted Successfully");
                }
            if (edited != "") {
                alertify.message('Updated Successfully');
                }
            if (failed != "") {
                alertify.error(failed);
                }
            });
        });

    </script>

}