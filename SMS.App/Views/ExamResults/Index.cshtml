@model IEnumerable<SMS.App.ViewModels.ExamVM.ExamResultVM>

@using System.Globalization

@{
    ViewData["Title"] = "Exam Result List";
    GlobalUI.PageTitle = ViewData["Title"].ToString();
}

<div class="row">
    <div class="col-md-4">
        <fieldset class="border border-info p-2">
            <legend class="w-auto text-primary">Result Information</legend>
            <form asp-action="" asp-controller="" method="post">
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Exam Type</label>
                    <div class="col-md-9">
                        <select asp-items="ViewBag.ExamType" class="form-control">
                            <option selected disabled>-Select Exam Type-</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Exam Type</label>
                    <div class="col-md-9">
                        <select id="monthId" name="monthId" class="form-control">
                            <option disabled>--Select Month--</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i">@DateTimeFormatInfo.CurrentInfo.GetMonthName(i)</option>
                            }
                            <option selected disabled>-Select Exam Type-</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Academic Class</label>
                    <div class="col-md-9">
                        <select asp-items="ViewBag.ClassList" class="form-control">
                            <option value="value">-Select Class-</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label">Academic Section</label>
                    <div class="col-md-9">
                        <select class="form-control">
                            <option value="value">-Select Section-</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 text-md-right">
                        <span class="btn btn-info btn-sm">Show Result</span>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
    <div class="col-md-8">
        <div class="row">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-md-3 card m-2">
                        <div class="card-header bg-info text-light"><h5>@item.ExamName</h5></div>
                    </div>
                }
            }
        </div>
    </div>
</div>
